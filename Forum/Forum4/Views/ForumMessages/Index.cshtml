@model Forum4.Models.ForumTopic

<h2>@Model.Title</h2>

<div id="chat-container">
    @foreach (var message in Model.Messages)
    {
        <div class="chat-message @((message.CreatedBy == User.Identity.Name) ? "self" : "other")">
            <div class="chat-message-info">
                <div class="chat-message-author">@message.CreatedBy</div>
                <div class="chat-message-time">@message.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</div>
            </div>
            <div class="chat-message-body">@message.Message</div>
        </div>
    }
</div>

<form id="chat-form" method="post" asp-action="Create" asp-route-id="@Model.Id">
    <input type="hidden" name="ForumTopicId" value="@Model.Id" />

    <div class="form-group">
        <textarea class="form-control" name="Message" rows="3" placeholder="Type your message here"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>

@section Scripts {
    <script>
        // scroll to bottom of chat container on page load
        $(document).ready(function () {
            $("#chat-container").scrollTop($("#chat-container")[0].scrollHeight);
        });

        // scroll to bottom of chat container on new message
        $("#chat-form").submit(function () {
            $("#chat-container").scrollTop($("#chat-container")[0].scrollHeight);
        });
    </script>

    <style>
        #chat-container {
            height: 400px;
            overflow-y: scroll;
        }

        .chat-message {
            display: flex;
            margin-bottom: 10px;
        }

        .chat-message-info {
            width: 120px;
            font-size: 12px;
            color: #888;
            padding-right: 10px;
        }

        .chat-message-author {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .chat-message-time {
            margin-bottom: 5px;
        }

        .chat-message-body {
            background-color: #f1f1f1;
            padding: 10px;
            border-radius: 10px;
            font-size: 14px;
        }

        .chat-message.self .chat-message-info {
            order: 2;
            padding-left: 10px;
            padding-right: 0;
            text-align: right;
        }

        .chat-message.self .chat-message-body {
            order: 1;
            background-color: #4CAF50;
            color: white;
            margin-left: 50px;
            margin-right: 0;
        }

        .chat-message.other .chat-message-info {
            order: 1;
        }

        .chat-message.other .chat-message-body {
            order: 2;
            background-color: white;
            margin-right: 50px;
            margin-left: 0;
        }
    </style>
}
